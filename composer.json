{
  "name": "wearerequired/translations-cache",
  "description": "Reduces file reads for translations by caching the first read via APCu.",
  "license": "GPL-2.0-or-later",
  "type": "wordpress-muplugin",
  "authors": [
    {
      "name": "required",
      "email": "info@required.ch",
      "homepage": "https://required.com",
      "role": "Company"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7",
    "wearerequired/coding-standards": "^4.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "platform-check": false
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "scripts": {
    "format": "vendor/bin/phpcbf --report-summary --report-source .",
    "lint": "vendor/bin/phpcs --report-summary --report-source ."
  },
  "scripts-descriptions": {
    "format": "Detect and automatically fix most coding standards issues",
    "lint": "Detect coding standards issues"
  }
}
